{
  "name": "herbal-care-hub",
  "version": "1.0.0",
  "description": "A comprehensive wellness web application focused on traditional herbal knowledge and natural health remedies",
  "main": "server/index.ts",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx server/index.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && npm run build",
    "build:server": "tsc --project tsconfig.json",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write ."
  },
  "keywords": [
    "herbs",
    "wellness",
    "health",
    "natural-remedies",
    "african-herbs",
    "community",
    "react",
    "typescript",
    "express"
  ],
  "author": "HerbalCareHub Team",
  "license": "MIT",
  "dependencies": {
    "cross-env": "^10.0.0",
    "drizzle-orm": "^0.29.0",
    "express": "^4.18.2",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "tsx": "^4.6.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "drizzle-kit": "^0.20.6",
    "eslint": "^8.53.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jonnieke/herbal.git"
  },
  "bugs": {
    "url": "https://github.com/jonnieke/herbal/issues"
  },
  "homepage": "https://herbal-care-hub.vercel.app"
}
